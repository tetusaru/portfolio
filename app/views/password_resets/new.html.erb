<div class="min-h-screen bg-gray-50 flex flex-col justify-between">
  <!-- ヘッダー -->
  <%= render 'shared/header' %>

  <!-- メールアドレス入力フォーム -->
  <main class="flex-1 flex items-center justify-center px-4">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
      <h2 class="text-center text-2xl font-bold mb-6">パスワードリセット申請</h2>

      <%= form_with url: password_resets_path, method: :post, local: true do |f| %>
        <div class="mb-4">
          <%= label_tag :email, "登録済みメールアドレス", class: "block text-gray-700 font-medium mb-2" %>
          <%= email_field_tag :email, nil, required: true, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <%= submit_tag "送信", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600" %>
      <% end %>
    </div>
  </main>

  <!-- フッター -->
  <%= render 'shared/footer' %>
</div>