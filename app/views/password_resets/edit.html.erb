<div class="min-h-screen bg-gray-50 flex flex-col justify-between">
  <!-- ヘッダー -->
  <%= render 'shared/header' %>

  <!-- パスワード再設定フォーム -->
  <main class="flex-1 flex items-center justify-center px-4">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
      <h2 class="text-center text-2xl font-bold mb-6">パスワード再設定</h2>

      <%= form_with url: password_reset_path, method: :post, local: true, data: { turbo: false } do |f| %>
        <div class="mb-4">
          <%= label_tag :email, "メールアドレス" %>
          <%= text_field_tag :email, nil, class: "w-full px-4 py-2 border rounded" %>
        </div>
        <div>
          <%= submit_tag "パスワードリセットメールを送る", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
        </div>
      <% end %>
    </div>
  </main>

  <!-- フッター -->
  <%= render 'shared/footer' %>
</div>