<%= render 'shared/header' %>

<main class="flex flex-col items-center justify-center min-h-screen bg-gray-50 px-4">
  <h1 class="text-2xl font-bold text-gray-800 mb-4">自分の好みのサウナについて答えてみよう！</h1>

  <%= form_with url: answer_survey_path, method: :post, local: true do %>
    <% @questions_page2.each do |q| %>
      <div class="mb-4">
        <p><%= q[:text] %></p>
        <% if q[:id] == 5 %>
          <input type="text" name="answers[<%= q[:id] %>]" placeholder="都道府県を入力">
        <% else %>
          <label>
            <input type="radio" name="answers[<%= q[:id] %>]" value="male"> 男性
          </label>
          <label>
            <input type="radio" name="answers[<%= q[:id] %>]" value="female"> 女性
          </label>
        <% end %>
      </div>
    <% end %>

    <% @previous_answers.each do |key, value| %>
      <input type="hidden" name="answers[<%= key %>]" value="<%= value %>">
    <% end %>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">診断する</button>
  <% end %>
</main>

<%= render 'shared/footer' %>