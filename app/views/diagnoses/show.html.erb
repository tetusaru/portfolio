<%= render 'shared/header' %>

<main class="flex flex-col items-center justify-center min-h-screen bg-gray-50 px-4">
  <!-- タイトルと左右イラスト -->
  <div class="flex items-center justify-center mb-6 space-x-4">
    <!-- 左側イラスト -->
    <%= image_tag 'cat_sauna.png', alt: 'サウナ猫', class: 'w-20 h-auto hidden sm:block' %>

    <!-- タイトル -->
    <h1 class="text-xl md:text-3xl font-bold text-gray-800 text-center">
      診断結果
    </h1>

    <!-- 右側イラスト -->
    <%= image_tag 'sloth_relax.png', alt: 'ととのいナマケモノ', class: 'w-20 h-auto hidden sm:block' %>
  </div>

  <% if @result %>
    <div class="bg-white rounded shadow-md p-6 w-full max-w-md md:max-w-lg text-center">
      <h2 class="text-lg md:text-xl font-bold text-gray-900 mb-2"><%= @result.name %></h2>
      <p class="text-gray-600 mb-4">場所: <%= @result.location %></p>
      <a href="<%= sauna_facility_path(@result) %>" class="inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
        詳細を見る
      </a>
    </div>
  <% else %>
    <div class="bg-red-100 rounded shadow-md p-6 max-w-lg text-center">
      <p class="text-gray-800"><%= @message %></p>
    </div>
  <% end %>

  <div class="mt-6">
    <a href="<%= survey_path %>" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">もう1度診断する</a>
  </div>
</main>

<%= render 'shared/footer' %>